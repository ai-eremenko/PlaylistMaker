<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation_graph"
    app:startDestination="@id/mediaLibraryFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.playlistmaker.ui.search.fragment.SearchFragment"
        android:label="SearchFragment" >
        <action
            android:id="@+id/action_searchFragment_to_audioPlayerFragment"
            app:destination="@id/audioPlayerFragment"/>
    </fragment>

    <action
        android:id="@+id/action_global_audioPlayerFragment"
        app:destination="@id/audioPlayerFragment"/>

    <fragment
        android:id="@+id/mediaLibraryFragment"
        android:name="com.example.playlistmaker.ui.media_library.fragment.MediaLibraryFragment"
        android:label="MediaLibraryFragment" >
        <action
            android:id="@+id/action_mediaLibraryFragment_to_playlistInfoFragment"
            app:destination="@id/playlistInfoFragment" />
    </fragment>


    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.playlistmaker.ui.settings.fragment.SettingsFragment"
        android:label="SettingsFragment" >
    </fragment>


    <fragment
        android:id="@+id/audioPlayerFragment"
        android:name="com.example.playlistmaker.ui.audio_player.fragment.AudioPlayerFragment"
        android:label="AudioPlayerFragment">
        <action
            android:id="@+id/action_audioPlayerFragment_to_newPlaylistFragment"
            app:destination="@id/newPlaylistFragment" />
    </fragment>


    <fragment
        android:id="@+id/newPlaylistFragment"
        android:name="com.example.playlistmaker.ui.new_playlist.fragment.NewPlaylistFragment"
        android:label="NewPlaylistFragment" >
        <argument
            android:name="edit_playlist_id"
            app:argType="long"
            android:defaultValue="0L" />
    <action
        android:id="@+id/action_mediaLibrary_to_newPlaylist"
        app:destination="@id/newPlaylistFragment" />
    </fragment>


    <fragment
        android:id="@+id/playlistInfoFragment"
        android:name="com.example.playlistmaker.ui.playlist_info.fragment.PlaylistInfoFragment"
        android:label="PlaylistInfoFragment">
        <argument
            android:name="playlist_id"
            android:defaultValue="0L"
            app:argType="long" />
        <action
            android:id="@+id/action_playlistInfoFragment_to_audioPlayerFragment"
            app:destination="@id/audioPlayerFragment" />

        <action
            android:id="@+id/action_playlistInfoFragment_to_newPlaylistFragment"
            app:destination="@id/newPlaylistFragment">
            <argument
                android:name="edit_playlist_id"
                app:argType="long"
                android:defaultValue="0L" />
        </action>

    </fragment>


</navigation>