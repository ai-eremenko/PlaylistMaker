<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainBackgroundStyle">
        <item name="android:background">@color/black_for_settings</item>
    </style>

    <style name="MainTextViewStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainButtonStyle">
        <item name="android:textColor">@color/black_for_settings</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_radius_size</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/black_for_settings</item>
    </style>

    <style name="SettingBackgroundStyle">
        <item name="android:background">@color/black_for_settings</item>
    </style>

    <style name="SettingHeaderStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BackArrowStyle">
        <item name="tint">@color/white</item>
    </style>

    <style name="DarkThemeButtonStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="thumbTint">@color/switch_thumb_active_color</item>
        <item name="trackTint">@color/switch_track_active_color</item>
    </style>

    <style name="SettingButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:backgroundTint">@color/black_for_settings</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SettingTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="SettingImageViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="EditTextBgStyle">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="EditTextImageStyle">
        <item name="tint">@color/black_for_settings</item>
    </style>

    <style name="EditTextHintStyle">
        <item name="android:textColorHint">@color/black_for_settings</item>
    </style>

</resources>
