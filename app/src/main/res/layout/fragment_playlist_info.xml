<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/edit_text_grey">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/coverPlaylistInfLayout"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/backLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/backButtonPlayer"
            android:layout_width="@dimen/size_second"
            android:layout_height="@dimen/size_second"
            android:layout_marginStart="@dimen/margin_start_third"
            android:layout_marginTop="@dimen/margin_start_third"
            android:src="@drawable/back_button__player"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/backLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black_for_settings"
            tools:ignore="MissingConstraints" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/coverNewPlaylistLayout"
            android:layout_width="236.08dp"
            android:layout_height="233.74dp"

            android:layout_marginTop="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backLayout" >

            <ImageView
                android:id="@+id/placeholderNewPlaylist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder4"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="-32dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/PlaylistNameLayout"
            android:layout_width="0dp"
            android:layout_height="@dimen/size11"
            android:layout_marginStart="@dimen/padding_standard"
            android:layout_marginTop="@dimen/margin_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coverPlaylistInfLayout"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/playlistName"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:fontFamily="@font/ys_display_bold"
                android:gravity="left|center_vertical"
                android:text="fdfgds"
                android:textColor="@color/black_for_settings"
                android:textFontWeight="700"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/YearLayout"
            android:layout_width="0dp"
            android:layout_height="@dimen/size11"
            android:layout_marginStart="@dimen/padding_standard"
            android:layout_marginTop="@dimen/margin_start_second"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PlaylistNameLayout"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/yearOfPlaylist"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:fontFamily="@font/ys_display_regular"
                android:gravity="left|center_vertical"
                android:text="2022"
                android:textColor="@color/black_for_settings"
                android:textFontWeight="400"
                android:textSize="@dimen/text_size3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/TimeDurationLayout"
            android:layout_width="0dp"
            android:layout_height="@dimen/size11"
            android:layout_marginStart="@dimen/padding_standard"
            android:layout_marginTop="@dimen/margin_start_second"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PlaylistNameLayout"
            tools:ignore="MissingConstraints">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/timeDuration"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/padding_standard"
            android:layout_marginTop="@dimen/margin_start_second"
            android:fontFamily="@font/ys_display_regular"
            android:gravity="left|center_vertical"
            android:text="133"
            android:textColor="@color/black_for_settings"
            android:textFontWeight="400"
            android:textSize="@dimen/text_size3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/YearLayout" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dotLayout"
            android:layout_width="@dimen/size4"
            android:layout_height="@dimen/size4"
            app:layout_constraintBottom_toBottomOf="@+id/timeDuration"
            app:layout_constraintStart_toEndOf="@+id/timeDuration"
            app:layout_constraintTop_toTopOf="@+id/timeDuration" />


        <ImageView
            android:id="@+id/dot"
            android:layout_width="@dimen/size4"
            android:layout_height="@dimen/size4"
            android:src="@drawable/dot2"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/dotLayout"
            app:layout_constraintEnd_toEndOf="@+id/dotLayout"
            app:layout_constraintTop_toTopOf="@+id/dotLayout"
            tools:ignore="MissingConstraints" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/TrackCountLayout"
            android:layout_width="0dp"
            android:layout_height="@dimen/size11"
            android:layout_marginStart="@dimen/padding_standard"
            android:layout_marginTop="@dimen/margin_start_second"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PlaylistNameLayout"
            tools:ignore="MissingConstraints">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/trackCount"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:fontFamily="@font/ys_display_regular"
            android:gravity="left|center_vertical"
            android:text="44"
            android:textColor="@color/black_for_settings"
            android:textFontWeight="400"
            android:textSize="@dimen/text_size3"
            app:layout_constraintBottom_toBottomOf="@+id/timeDuration"
            app:layout_constraintStart_toEndOf="@+id/dotLayout"
            app:layout_constraintTop_toTopOf="@+id/timeDuration" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ShareButtonLayout"
            android:layout_width="@dimen/size_first"
            android:layout_height="@dimen/size_first"
            android:layout_marginStart="@dimen/padding_standard"
            android:layout_marginTop="@dimen/padding_standard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timeDuration" />

        <ImageView
            android:id="@+id/ShareButton"
            android:layout_width="@dimen/size_first"
            android:layout_height="@dimen/size_first"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/share_b"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/menuButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timeDuration"
            app:tint="@color/black_for_settings"
            tools:ignore="MissingConstraints" />


        <ImageView
            android:id="@+id/menuButton"
            android:layout_width="@dimen/size_first"
            android:layout_height="@dimen/size_first"
            android:layout_marginStart="20dp"
            android:src="@drawable/more_b"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/ShareButtonLayout"
            app:layout_constraintStart_toEndOf="@+id/ShareButtonLayout"
            app:layout_constraintTop_toTopOf="@+id/ShareButtonLayout"
            app:tint="@color/black_for_settings" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone"/>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/playlists_info_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/size_first"
        android:background="@drawable/bottom_sheet_bg"
        android:fillViewport="true"
        app:behavior_hideable="false"
        app:behavior_peekHeight="400dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/view2"
                android:layout_width="50dp"
                android:layout_height="@dimen/margin_start_third"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounder_bsh" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/playlistsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_start" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/playlists_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/bottom_sheet_bg"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        style="@style/SettingBackgroundStyle"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:layout_width="50dp"
            android:layout_height="@dimen/margin_start_third"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_start_second"
            android:background="@drawable/rounder_bsh" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/playlist_cover"
            android:layout_width="@dimen/size_second"
            android:layout_height="@dimen/size_second"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginStart="@dimen/size4"
            android:layout_marginTop="@dimen/margin_start_second"
            android:layout_marginBottom="@dimen/margin_start_second"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_second"
            app:layout_constraintStart_toEndOf="@id/playlist_cover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/playlist_name_bsh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medium"
                android:fontFamily="@font/ys_display_regular"
                android:textFontWeight="400"
                style="@style/SettingHeaderStyle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <TextView
                android:id="@+id/playlist_tracks_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/ys_display_regular"
                android:textFontWeight="400"
                android:layout_marginTop="1dp"
                android:text="апв"
                style="@style/SettingHeaderStyle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/playlist_name_bsh"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ShareLayout"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/shareButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/ys_display_regular"
                android:gravity="left|center_vertical"
                android:text="@string/share"
                style="@style/SettingTextViewStyle"
                android:textFontWeight="400"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/editInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/editInfoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/ys_display_regular"
                android:gravity="left|center_vertical"
                android:text="@string/edit_info"
                style="@style/SettingTextViewStyle"
                android:textFontWeight="400"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/deletePlaylistLayout"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/deletePlaylistButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/ys_display_regular"
                android:gravity="left|center_vertical"
                android:text="@string/delete_playlist"
                style="@style/SettingTextViewStyle"
                android:textFontWeight="400"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>